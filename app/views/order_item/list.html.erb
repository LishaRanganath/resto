<style>
.form-style
{
  display:inline;
}
</style>

<div style="text-align: center;">
<h1 class="heading">Your Cart</h1>
<table class="table table-striped" >
  <thead>
    <tr>
     
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |item|%>
      <tr>
        <td><%= item.menu.name%></td>
        <td><%= item.menu.cost%></td>
        <td><%= item.quantity %></td>

        <td> <%= form_with(model: OrderItem, url: cart_path, method: :post,class:"form-style") do |form|%>
         <%= form.hidden_field :menu_id, value: item.id %>
        <%= form.submit "+" %>
        <% end %>
        <%= form_with( model: OrderItem,url: cart_path, method: :put,class:"form-style") do |form|%>
         <%= form.submit "-",class: "decrement" %>
         <%end%>
        </td>
    </tr>
    <%end%>
  </tbody>
</table>
 <% if @sum_order.present? %>
  <p>Total: <%= @sum_order %></p>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
  <%= button_to "Checkout", payment_path,style:"background-color:#00b359; width: 300px; height: 40px; font-size:25px;",method: :post%>
</div>