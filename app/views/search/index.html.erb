<% @menu.each do |menu| %>
<h1><%=menu.name%></h1>
<%end%>

<table class="table table-striped" >
  <thead>
    <tr>
     
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @menu.each do |menu| %>
      <tr>
        <td><%= menu.name%></td>
        <td><%= menu.cost%></td>
        <td> <%= form_with(model: OrderItem, url: menu_path, method: :post,class:"form-style") do |form|%>
         <%= form.hidden_field :menu_id, value: menu.id %>
        <%= form.submit "+" %>
        <% end %>
        <%= form_with( model: OrderItem,url: menu_path, method: :put,class:"form-style") do |form|%>
         <%= form.submit "-",class: "decrement" %>
         <%end%>
        </td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>