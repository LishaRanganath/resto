<div style="text-align: center;">
<h1 class="heading">Menu List</h1>
<table class="table table-striped" >
  <thead>
    <tr>
     
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% @menu.each do |item|%>
    <tr>
      <td><%= item.name%></td>
      <td><%= item.cost%></td>
      <td><button type="button"  class="btn btn-info">+</button></td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>